{
  "name": "gotify-webhooks",
  "type": "module",
  "version": "1.0.0",
  "description": "Sends HTTP requests when Gotify server receives messages.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NPM_CONFIG_LOGLEVEL=\"verbose\"; concurrently -k \"npm run watch\"  \"npx nodemon ./dist/index.js\"",
    "watch": "npx tsc --build --watch --verbose",
    "build": "npx tsc --build --verbose",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gerold-penz/gotify-webhooks.git"
  },
  "keywords": [
    "gotify",
    "webhook",
    "message",
    "notification"
  ],
  "author": "Gerold Penz Softwaretechnik - <gerold@gp-softwaretechnik.at>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gerold-penz/gotify-webhooks/issues"
  },
  "homepage": "https://github.com/gerold-penz/gotify-webhooks#readme",
  "dependencies": {
    "ws": "^8.8.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^18.0.3",
    "@types/ws": "^8.5.3",
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.19"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.6",
    "utf-8-validate": "^5.0.9"
  }
}
